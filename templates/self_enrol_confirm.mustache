<div class="ui-edupublisher"><div class="alert-warning" style="padding: 10px;">
    {{#unenrol}}
    <h3>{{#str}} self_unenrol, block_edupublisher {{/str}}</h3>
    <p>{{#str}} self_unenrol_confirm_text, block_edupublisher {{/str}}</p>
    {{/unenrol}}
    {{^unenrol}}
    <h3>{{#str}} self_enrol, block_edupublisher {{/str}}</h3>
    <p>{{#str}} self_enrol_confirm_text, block_edupublisher {{/str}}</p>
    {{/unenrol}}

    <form method="POST" enctype="multipart/form-data">
        {{#unenrol}}
            <input type="hidden" name="unenrol" value="1" />
            {{#canenrolasteacher}}
                <input type="hidden" name="confirm" value="1">
                <input type="hidden" name="canenrolasteacher" value="1" />
                <label>
                    <input type="checkbox" name="asstudent">
                    {{#str}} only_viewing_unenrol_as_student, block_edupublisher {{/str}}
                </label><br />
                <label>
                    <input type="checkbox" name="asteacher">
                    {{#str}} only_viewing_unenrol_as_teacher, block_edupublisher {{/str}}
                </label><br />
            {{/canenrolasteacher}}
            {{^canenrolasteacher}}
            <label>
                <input type="checkbox" name="confirm">
                {{#str}} only_viewing_unenrol_button, block_edupublisher  {{/str}}
            </label>
            {{/canenrolasteacher}}
        {{/unenrol}}
        {{^unenrol}}
            {{#canenrolasteacher}}
                <input type="hidden" name="confirm" value="1">
                <input type="hidden" name="canenrolasteacher" value="1" />
                <label>
                    <input type="checkbox" name="asstudent">
                    {{#str}} only_viewing_enrol_as_student, block_edupublisher {{/str}}
                </label><br />
                <label>
                    <input type="checkbox" name="asteacher">
                    {{#str}} only_viewing_enrol_as_teacher, block_edupublisher {{/str}}
                </label><br />
            {{/canenrolasteacher}}
            {{^canenrolasteacher}}
            <label>
                <input type="checkbox" name="confirm">
                {{#str}} only_viewing_enrol_button, block_edupublisher  {{/str}}
            </label>
            {{/canenrolasteacher}}
        {{/unenrol}}

        <button type="submit" class="btn btn btn-primary">
            {{#str}} submit {{/str}}
        </button>
    </form>
</div></div>
