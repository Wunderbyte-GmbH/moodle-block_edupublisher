<table class="generaltable">
    <thead>
        <tr>
            <th>
                {{#str}} groups:name, block_edupublisher {{/str}}
            </th>
            <th style="text-align: center;">
                {{#str}} groups:urlstudent, block_edupublisher {{/str}}
            </th>
            <th style="text-align: center;">
                {{#str}} groups:urlteacher, block_edupublisher {{/str}}
            </th>
            <th style="text-align: center;">
                {{#str}} delete {{/str}}
            </th>
        </tr>
    </thead>
    <tbody>
        {{#groups}}
        <tr>
            <td>{{name}}</td>
            <td style="text-align: center;">
                <a href="{{urlstudent}}" target="_blank">
                    <i class="fa fa-external-link"></i>
                    {{codestudent}}
                </a>
            </td>
            <td style="text-align: center;">
                <a href="{{urlteacher}}" target="_blank">
                    <i class="fa fa-external-link"></i>
                    {{codeteacher}}
                </a>
            </td>
            <td style="text-align: center;">
                <a href="#" onclick="require(['block_edupublisher/main'], function(M) { M.confirmDeleteGroup('{{urldelete}}'); }); return false;">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
        {{/groups}}
    </tbody>
</table>
