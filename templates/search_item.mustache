<div class="card">
    <div class="card-header">
        <a href="{{{url}}}">
            <img src="{{{wwwroot}}}/{{default_image}}" class="card-img-top" alt="{{title}}">
        </a>

        <div class="overlay"></div>
        <h5 class="card-title">
            <a href="{{{url}}}">
                {{title}}
            </a>
        </h5>
        <div class="rating">
            {{> block_edupublisher/package_rating }}
        </div>
    </div>
    <div class="card-body">
        <div class="card-text">
            {{#default_tags}}
                <span class="badge bg-secondary">{{.}}</span>
            {{/default_tags}}
        </div>
    </div>
</div>
