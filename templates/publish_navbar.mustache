<div class="publish_navbar">
    <div class="progressbar" style="grid-template-columns: repeat(4, 1fr);">
        <div {{#publishstage_confirm}} class="active" {{/publishstage_confirm}}>
            <div><span class="circle">1</span></div>
            {{#str}} publish_stage_confirm, block_edupublisher {{/str}}
        </div>
        <div {{#publishstage_import}} class="active" {{/publishstage_import}}>
            <div><span class="circle">2</span></div>
            {{#str}} publish_stage_import, block_edupublisher {{/str}}
        </div>
        <div {{#publishstage_metadata}} class="active" {{/publishstage_metadata}}>
            <div><span class="circle">3</span></div>
            {{#str}} publish_stage_metadata, block_edupublisher {{/str}}
        </div>
        <div {{#publishstage_finish}} class="active" {{/publishstage_finish}}>
            <div><span class="circle">4</span></div>
            {{#str}} publish_stage_finish, block_edupublisher {{/str}}
        </div>
    </div>
</div>
<hr style="width: 80%; text-align:center;" />
