<div id="edupublisher-evaluationlist-{{packageid}}" class="_ui-edupublisher"><div>
    <p>{{#str}} evaluation_introtext, block_edupublisher {{/str}}</p>
    {{^hasevaluations}}
        <p class="alert alert-warning">{{#str}} evaluation_none, block_edupublisher {{/str}}</p>
    {{/hasevaluations}}
    {{#canevaluate}}
        <a href="{{wwwroot}}/blocks/edupublisher/pages/evaluate.php?packageid={{packageid}}" class="btn btn-primary">
            {{#str}} evaluate, block_edupublisher {{/str}}
        </a>
    {{/canevaluate}}
    {{#hasevaluations}}
    <table width="100%" class="generaltable">
        <thead>
            <tr>
                <th class="cell c0">&nbsp;</th>
                <th class="cell c1">{{#str}} user {{/str}}</th>
                <th class="cell c1">{{#str}} evaluated_on, block_edupublisher {{/str}}</th>
                <th class="cell c1">{{#str}} school, block_edupublisher {{/str}}</th>
                <th class="cell c1">{{#str}} action {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#evaluations}}
            <tr>
                <td style="vertical-align: middle;">
                    <a href="{{{userurl}}}" target="_blank">
                        <img src="{{userpicture}}" style="width: 50px;" />
                    </a>
                </td>
                <td style="vertical-align: middle;">
                    <a href="{{{userurl}}}" target="_blank">
                        {{userfullname}}
                    </a>
                </td>
                <td style="vertical-align: middle;">{{evaluated_on_readable}}</td>
                <td style="vertical-align: middle;">{{evaluated_at}}</td>
                <td style="vertical-align: middle;">
                    <a href="{{{linkurl}}}">
                        <i class="fa fa fa-external-link"></i>
                    </a>
                </td>
            </tr>
            {{/evaluations}}
        </tbody>
    </table>
    {{/hasevaluations}}
</div></div><!-- ui-edupublisher -->
